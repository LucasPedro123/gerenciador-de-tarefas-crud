@model IEnumerable<project_mvc.Models.Tarefa>

@{
    ViewData["Title"] = "Lista de Tarefas";
}

<h1>Lista de Tarefas</h1>

<p>
    <a asp-action="Criar">Criar nova tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                    <td>@item.Data.ToShortDateString()</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-primary btn-sm" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                        <form asp-action="Deletar" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja deletar esta tarefa?')">Deletar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</table>
